-@val boardNameError: String = ""
-@val lengthOfSessionError: String = ""
-@val board: String = ""
-@val lengthOfSession: String = ""
- attributes("title") = "CodingBoard - Create Board"

form(method="POST" action="submitboard")
    fieldset
        legend 
            h2 The details of your CodingBoard
        div
            label Describe your session:
            input(placeholder="Name your board..." name="board" id="board" value="#{board}" size="50")
        div
            p(class="text-error")=boardNameError
        div
            input(type="checkbox" name="private" id="private" value="")
        div
            input(placeholder="Lifetime of your board in minutes" name="lengthOfSessionInMinutes" id="lengthOfSessionInMinutes" value="#{lengthOfSession}" size="50")
        div
            p(class="text-error")=lengthOfSessionError
        div
            button(id="submit" class="btn btn-info btn-large" type="submit") Create CodingBoard

<script src="/js/jquery-1.7.2.js"></script>
:javascript
    $('#board').focus()
