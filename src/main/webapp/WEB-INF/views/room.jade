button(class=".ben-large" onclick="window.location='/rooms/#{room}/codesnippet'") post a code snippet

div#codesnippets
    - for (codeSnippet <- room.codeSnippets.reverse)
        div
            div 
                b= codeSnippet.description
            div
                pre(class="brush: #{codeSnippet.language}")= codeSnippet.code
            div 
                i= codeSnippet.formattedTime

